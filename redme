<!-- Firebase SDKs -->
<script type="module">
  import { initializeApp } from "https://www.gstatic.com/firebasejs/10.13.0/firebase-app.js";
  import { getFirestore, collection, getDocs } from "https://www.gstatic.com/firebasejs/10.13.0/firebase-firestore.js";

  // ضع هنا القيم الحقيقية من Firebase
  const firebaseConfig = {
    apiKey: "ضع-القيمة-التي ظهرتلك",
    authDomain: "bait-elhekma-medical.firebaseapp.com",
    projectId: "bait-elhekma-medical",
    storageBucket: "bait-elhekma-medical.appspot.com",
    messagingSenderId: "ضع-القيمة-التي ظهرتلك",
    appId: "ضع-القيمة-التي ظهرتلك"
  };

  const app = initializeApp(firebaseConfig);
  const db = getFirestore(app);

  async function displayServices() {
    const container = document.getElementById("services-container");
    const querySnapshot = await getDocs(collection(db, "services"));

    querySnapshot.forEach((doc) => {
      const data = doc.data();
      const div = document.createElement("div");
      div.className = "service-card";
      div.innerHTML = `
        <img src="${data.imageURL}" alt="${data.title}">
        <div class="service-content">
          <h2>${data.title}</h2>
          <p>${data.description}</p>
          <ul>
            ${data.subServices.map(item => `<li>${item}</li>`).join("")}
          </ul>
          <a href="tel:01014405094" class="btn-contact">اتصل للحجز</a>
        </div>
      `;
      container.appendChild(div);
    });
  }

  displayServices();
</script>

